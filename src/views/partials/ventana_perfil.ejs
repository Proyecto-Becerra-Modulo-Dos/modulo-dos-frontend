</div>

<style>
    .ventana_perfil {
        position: absolute;
        width: 320px;
        height: 380px;
        background-color: #b3b9e9;
        border-radius: 10px;
        right: 20px;
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 50% 50%;
        display: none;
    }

    .ventana_perfil_arriba {
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding-bottom: 10px;
    }

    .btn-x {
        margin-left: 90%;
        font-size: 30px;
        color: black;
        cursor: pointer;
    }


    .foto_perfil_foto {
        width: 80px;
        height: 80px;
        border-radius: 100%;
        background-image: url(/img/fotousu.png);
        background-size: cover;
    }

    .nombre {
        margin-top: 5px;
    }


    .ventana_perfil_abajo {
        background-color: rgb(230, 230, 230);
        border-radius: 10px;
        padding: 15px;
        text-align: center;
    }

    .btn-administrar {
        background-color: white;
        color: #5064F0;
        border-radius: 10px;
        border: 1px solid black;
        font-weight: bold;
        padding: 5px;
    }

    .btn-administrar:hover {
        background-color: #bacdf3d2;
        border: 1px solid #5064F0;
    }

    .aparece {
        display: grid;
    }
</style>

<script>
    const ventana_perfil = document.getElementById("ventana_perfil")
    const opc = document.getElementById("opc")
    const btn_x = document.getElementById("btn_x")


    opc.addEventListener("click", () => {
        ventana_perfil.classList.toggle("aparece")
    })

    btn_x.addEventListener("click", () => {
        ventana_perfil.classList.toggle("aparece")
    })
</script>