<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/editarPerfil.css">
    <title>editar Perfil</title>

</head>

<body>
    <%- include('partials/sidebar') %>

        <div class="contenido_fondo">
            <%- include('partials/navbar') %>

                <main class="content">

                    <img src="/img/flecha-pequena-izquierda.png" alt="" class="salir">

                    <div class="contenedor_cajas">

                        <div class="caja">
                            <div class="texto">
                                <p class="titulo">Identificacion</p>
                                <p class="identificacion text" id="identificacion"></p>
                            </div>
                            <div class="flecha">
                                <img src="/img/angulo-derecho.png" alt="" class="flecha_ventana" onclick="abrirVentana(this)">
                            </div>
                        </div>

                        <div class="caja">
                            <div class="texto">
                                <p class="titulo">Nombres</p>
                                <p class="identificacion text" id="nombre"></p>
                            </div>
                            <div class="flecha">
                                <img src="/img/angulo-derecho.png" alt="" class="flecha_ventana" onclick="abrirVentana(this)">
                            </div>
                        </div>

                        <div class="caja">
                            <div class="texto">
                                <p class="titulo">Apellidos</p>
                                <p class="identificacion text" id="apellido"></p>
                            </div>
                            <div class="flecha">
                                <img src="/img/angulo-derecho.png" alt="" class="flecha_ventana" onclick="abrirVentana(this)">
                            </div>
                        </div>

                        <div class="caja">
                            <div class="texto">
                                <p class="titulo">celular</p>
                                <p class="identificacion text" id="numero_celular"></p>
                            </div>
                            <div class="flecha">
                                <img src="/img/angulo-derecho.png" alt="" class="flecha_ventana" onclick="abrirVentana(this)">
                            </div>
                        </div>

                        <div class="caja">
                            <div class="texto">
                                <p class="titulo">Direccion</p>
                                <p class="identificacion text" id="dirrecion"></p>
                            </div>
                            <div class="flecha">
                                <img src="/img/angulo-derecho.png" alt="" class="flecha_ventana" onclick="abrirVentana(this)">
                            </div>
                        </div>

                        <div class="caja">
                            <div class="texto">
                                <p class="titulo">E-mail</p>
                                <p class="identificacion text" id="correo"></p>
                            </div>
                            <div class="flecha">
                                <img src="/img/angulo-derecho.png" alt="" class="flecha_ventana" onclick="abrirVentana(this)">
                            </div>
                        </div>

                        <div class="caja">
                            <div class="texto">
                                <p class="titulo">Contraseña</p>
                                <p class="identificacion text" id="contrasena">******</p>
                            </div>
                            <div class="flecha">
                                <img src="/img/angulo-derecho.png" alt="" class="flecha_ventana" onclick="abrirVentana(this)">
                            </div>
                        </div>

                    </div>

                    <div id="modal" class="modal">
                        <div class="modal-content">
                            <span class="cerrar" onclick="cerrarVentana()">&times;</span>
                            <h2 id="modal-titulo">Actualizar Información</h2>
                            <input type="text" id="input-info" placeholder="Actualizar información">
                            <button onclick="guardarInfo()">Guardar</button>
                        </div>
                    </div>
                   
                </main>
        </div>
<script src="/js/editarPerfil.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>