                    </select> -->
                </div>
                <div class="form-group">
                    <label for="jornada">Tipo de Entrevista:</label>
                    <input id="tipo" class="puesto" placeholder="Ingrese la fecha de la entrevista">
                </div>
                <div class="form-group">
                    <label for="titulo">Fecha de Entrevista:</label>
                    <input type="date" id="fecha" placeholder="Ingrese el tipo de entrevista">
                </div>
                <div class="form-group">
                    <label for="descripcion">descripcion:</label>
                    <input type="text" id="descripcion" placeholder="Nombre del entrevistador">
                </div>
                <button class="btn__oferta" onclick="agregarEntrevista();">Agregar Entrevista</button>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/entrevista.js"></script>
</body>
</html>
