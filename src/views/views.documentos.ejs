<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="./css/Documentos.css">
    <title>Cargar Documentos</title>
</head>
<body>
    <%- include('partials/sidebar') %>

    <div class="content principal">
        <%- include('partials/navbar') %>
        <div class="container">
            <div class="volver">
                <button class="boton" type="submit"> Volver </button>
            </div>
            <div class="titulo">
                <h5>Cargar documentos personales</h5>
            </div>
            <div class="contenido">
                <div class="cargar">
                    <div class="cargardocumentos">
                        <ul class="file-list" id="fileList">
                            <!-- Aquí se mostrarán los archivos -->
                        </ul>
                    </div>
                    <div class="upload-actions">
                        <button class="add-files-btn" onclick="document.getElementById('fileInput').click()">Añadir otros archivos</button>
                    </div>
                    <input type="file" id="fileInput" name="documento" class="file-input" accept=".pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx, .txt" multiple />
                </div>
                <input type="text" id="tipoDocumento" class="tipo" placeholder="Tipo de Archivo">
                <div class="linea">
                    <span class="linee"></span>
                </div>
                <div class="linea">
                    <span class="linee2"></span>
                </div>
                <button class="guardar" onclick="uploadDocument()">Guardar</button>
                <button class="cancelar" type="submit"> Cancelar </button>
            </div>
        </div>
    </div>
    <script src="./js/documentos.js"></script>
</body>
</html>
