<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="./css/Incorporacion.css">
    <title>Formulario de Incorporación</title>
</head>
<body>
    <%- include('partials/sidebar') %> <!-- Se mantiene el include -->

  <div class="content principal">
    <%- include('partials/navbar') %> <!-- Se mantiene el include -->
    <div class="container">
      <h1 class="bienvenida">formulario <br> incorporación <span class="apexx">Apex</span>!</h1>
    </div>

    <!-- Formulario con ID -->
    <div class="formulario-incorporacion" id="formularioIncorporacion">
        <div class="form-header">
            <h4>Formulario de Incorporación</h4>
            <div class="linea">
              <span class="linee"></span>
          </div>
        </div>
        <form class="formular">
            <div class="form-group">
                <label for="telefono">Teléfono:</label>
                <input type="text" id="telefono" class="form-control" placeholder="_______________________________">
            </div>
            <div class="form-group">
                <label for="direccion">Dirección:</label>
                <input type="text" id="direccion" class="form-control" placeholder="_______________________________">
            </div>
            <div class="form-group">
                <label for="fecha">Fecha de nacimiento:</label>
                <input type="date" id="fecha" class="form-control">
            </div>
        </form>
        <!-- Botón de guardar -->
        <button type="button" class="btn btn-primary guardar-btn" onclick="ocultarFormulario()">GUARDAR</button>
    </div>
  </div>
  
  <script>
      // Función para ocultar el formulario
      function ocultarFormulario() {
          // Obtiene el formulario usando su id
          var formulario = document.getElementById('formularioIncorporacion');
          
          // Verifica si el formulario se encuentra correctamente
          if(formulario) {
              formulario.style.display = 'none';  // Ocultar el formulario
              alert("Formulario guardado con éxito.");  // Mensaje de confirmación
          } else {
              console.error('No se encontró el formulario');
          }
      }
  </script>
</body>
</html>
