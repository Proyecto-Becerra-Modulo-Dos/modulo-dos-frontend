<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/css/pago.css">
  <title>Empleado</title>
  <style>
    .rectangulo {
      margin: 0 auto;
      margin-top: 1vh; 
      padding: 30px;
      width: 80%; 
      max-width: 1000px; 
      border: 1px solid #ddd;
      border-radius: 10px;
      background-color: #f8f9fa;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .rectangulo h3 {
      text-align: center;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <%- include('partials/sidebar') %>
  <div class="content principal">
    <%- include('partials/navbar') %>

    <div class="container">
      <div class="rectangulo">
        <h3>Formulario de Solicitud de Vacaciones</h3>
        <form>
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="nombre" class="form-label">Nombre</label>
              <input type="text" class="form-control" id="nombre" placeholder="Ingresa tu nombre">
            </div>
            <div class="col-md-6">
              <label for="apellido" class="form-label">Apellido</label>
              <input type="text" class="form-control" id="apellido" placeholder="Ingresa tu apellido">
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="correo" class="form-label">Correo</label>
              <input type="email" class="form-control" id="correo" placeholder="Ingresa tu correo">
            </div>
            <div class="col-md-6">
              <label for="rol" class="form-label">Rol</label>
              <select class="form-select" id="rol">
                <option selected disabled>Selecciona un rol</option>
                <option value="empleado">Empleado</option>
                <option value="administrador">Administrador</option>
              </select>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success">Solicitar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let links = document.querySelectorAll(".nav1");
    let contenido1 = document.querySelector(".contenido1");
    let contenido2 = document.querySelector(".contenido2");
    let line = document.querySelector(".line");
    let badges = document.querySelectorAll(".badge");

    badges.forEach(badge => {
      if (badge.innerHTML === "En proceso") {
        badge.classList.add("en-proceso");
      } else if (badge.innerHTML === "Aprobado") {
        badge.classList.add("completada");
      } else if (badge.innerHTML === "Rechazado") {
        badge.classList.add("rechazada");
      }
    });
    links[0].style.fontWeight = "bold";
    links[0].closest(".opcion").appendChild(line);

    let array = [...links];

    links.forEach((link) => {
      link.addEventListener("click", (e) => {
        links.forEach(l => l.style.fontWeight = "normal");
        e.target.style.fontWeight = "bold";

        let opcion = e.target.closest(".opcion");
        opcion.appendChild(line);

        if (array.indexOf(link) === 1) {
          contenido1.style.display = "none";
          contenido2.style.display = "flex";
        } else {
          contenido1.style.display = "flex";
          contenido2.style.display = "none";
        }
      });
    });
  </script>

</body>
</html>
